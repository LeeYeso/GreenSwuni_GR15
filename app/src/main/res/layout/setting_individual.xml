<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="55dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/individual_back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/back_arrow"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:layout_margin="-100dp"
            android:fontFamily="@font/nanum_gothic_bold"
            android:text="개인 정보 수정"
            android:textColor="@color/black"
            android:textSize="24dp"/>
    </RelativeLayout>

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:src="@drawable/level3" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:layout_gravity="center"
        android:fontFamily="@font/nanum_gothic_bold"
        android:text="그린슈니"
        android:textColor="@color/black"
        android:textSize="24dp"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/nanum_gothic_bold"
        android:text="현재 2레벨"
        android:textColor="@color/orange_700"
        android:textSize="16dp" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/nanum_gothic_bold"
            android:text="이름"
            android:textColor="@color/black"
            android:textSize="16dp" />


        <EditText
            android:id="@+id/name_edit_text"
            android:layout_width="270dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:background="@drawable/edit_text_yellow"
            android:fontFamily="@font/nanum_gothic"
            android:hint="이름"
            android:inputType="textPersonName"
            android:padding="5dp" />

        <TextView
            android:id="@+id/name_empty_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            android:text="필수 입력값입니다."
            android:textColor="#FC6449"
            android:visibility="gone" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/nanum_gothic_bold"
            android:text="전화번호"
            android:textSize="16dp"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/phone_edit_text"
            android:layout_width="270dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:background="@drawable/edit_text_yellow"
            android:fontFamily="@font/nanum_gothic"
            android:hint="전화번호"
            android:inputType="textPhonetic"
            android:padding="5dp" />

        <TextView
            android:id="@+id/phone_empty_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            android:text="필수 입력값입니다."
            android:textColor="#FC6449"
            android:visibility="gone" />

        <TextView
            android:id="@+id/phone_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            android:text="전화번호 형식이 옳지 않습니다."
            android:textColor="#FC6449"
            android:visibility="gone" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/nanum_gothic_bold"
            android:text="비밀번호"
            android:textSize="16dp"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/email_edit_text"
            android:layout_width="270dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:background="@drawable/edit_text_yellow"
            android:fontFamily="@font/nanum_gothic"
            android:hint="비밀번호"
            android:inputType="textEmailAddress"
            android:padding="5dp" />

        <TextView
            android:id="@+id/password_empty_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            android:text="필수 입력값입니다."
            android:textColor="#FC6449"
            android:visibility="gone" />

        <TextView
            android:id="@+id/password_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            android:text="최소 6자 이상의 영어, 숫자, 특수기호 조합"
            android:textColor="#FC6449"
            android:visibility="gone" />

    </LinearLayout>

    <Button
        android:id="@+id/individual_change_btn"
        android:layout_width="270dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:backgroundTint="@color/green_500"
        android:background="@drawable/round_button"
        android:fontFamily="@font/nanum_gothic_bold"
        android:text="변경하기"
        android:textColor="@color/white" />

</LinearLayout>